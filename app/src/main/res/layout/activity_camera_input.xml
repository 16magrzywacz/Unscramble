<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraInputActivity">

    <TextView
        android:id="@+id/cameraInputTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:text="CAMERA INPUT"
        android:textColor = "?android:textColorPrimary"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <org.opencv.android.JavaCamera2View
        android:id="@+id/javaCameraView"
        android:layout_width="408dp"
        android:layout_height="544dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/captureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:text="CAPTURE"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:cornerRadius="15dp"/>


    <ImageView
        android:id="@+id/square5"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="182dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="249dp"
        app:layout_constraintBottom_toBottomOf="@+id/javaCameraView"
        app:layout_constraintEnd_toEndOf="@+id/javaCameraView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/javaCameraView"
        app:layout_constraintTop_toTopOf="@+id/javaCameraView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/square8"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="182dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="181dp"
        app:layout_constraintEnd_toEndOf="@+id/javaCameraView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/javaCameraView"
        app:layout_constraintTop_toBottomOf="@+id/square5"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/square9"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toEndOf="@+id/square8"
        app:layout_constraintTop_toBottomOf="@+id/square6"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/square2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="182dp"
        android:layout_marginEnd="181dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/square5"
        app:layout_constraintEnd_toEndOf="@+id/javaCameraView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/javaCameraView"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/square1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/square4"
        app:layout_constraintEnd_toStartOf="@+id/square2"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/square3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/square6"
        app:layout_constraintStart_toEndOf="@+id/square2"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/square4"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="249dp"
        app:layout_constraintBottom_toBottomOf="@+id/javaCameraView"
        app:layout_constraintEnd_toStartOf="@+id/square5"
        app:layout_constraintTop_toTopOf="@+id/javaCameraView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/square7"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="56dp"
        app:layout_constraintEnd_toStartOf="@+id/square8"
        app:layout_constraintTop_toBottomOf="@+id/square4"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/square6"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="249dp"
        app:layout_constraintBottom_toBottomOf="@+id/javaCameraView"
        app:layout_constraintStart_toEndOf="@+id/square5"
        app:layout_constraintTop_toTopOf="@+id/javaCameraView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/cameraIndicatorTop"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:scaleY="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226"
        app:srcCompat="@drawable/blue_square" />

    <ImageView
        android:id="@+id/cameraIndicatorBottom"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:scaleY="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776"
        app:srcCompat="@drawable/green_square" />

    <ImageButton
        android:id="@+id/cameraHome"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/primary_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/ic_baseline_home_24" />

</androidx.constraintlayout.widget.ConstraintLayout>